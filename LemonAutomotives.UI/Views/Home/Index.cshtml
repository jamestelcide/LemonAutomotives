@{
    ViewBag.Title = "Home";
    ViewBag.CurrentUrl = "~/Home/Index";
}

<section class="hero-section text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Manage your sales representative's automotive sales with ease!</h1>
        <p class="lead my-4">
            Supporting your automotive business with simple & powerful digital tools. Never miss a report again!
        </p>
        <div class="input-group my-3 w-50 mx-auto">
            <input type="email" class="form-control" placeholder="Enter email to">
            <button class="btn btn-warning">Get Started</button>
        </div>
    </div>
</section>

<div class="container mb-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm commission-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="commission-details">
                        <p class="m-0">John Smith</p>
                        <div>
                            <p class="commission-value me-2">Gross Sales: $16,580</p>
                            <p class="commission-value">Commission Generated: $3,316</p>
                        </div>
                        <p>Date: Q1 2024</p>
                    </div>
                </div>
                <div class="commission-options mt-3">
                    <button class="btn btn-outline-warning me-2">Check Sales</button>
                    <button class="btn btn-outline-warning text-nowrap">Edit Salesperson</button>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="features py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <h3>Products</h3>
                <p>Create a range of automotive listings.</p>
            </div>
            <div class="col-md-4">
                <h3>Salespersons</h3>
                <p>Track salespersons with ease with intuitive tooling.</p>
            </div>
            <div class="col-md-4">
                <h3>Customers</h3>
                <p>Track your customers and their purchases to get up to date info on which products they are buying.</p>
            </div>
        </div>
    </div>
</section>

<section class="callout-section text-white py-5">
    <div class="container text-center">
        <h2>Maximize your sales tracking with up to date sales reports.</h2>
        <p class="my-4">Log in today and say goodbye to stressful sales tracking forever.</p>
        <button class="btn btn-light">Get Started Now</button>
    </div>
</section>

<section class="pricing py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <div class="card p-4 shadow-sm pricing-card">
                    <h3>Free Plan</h3>
                    <h5>$0/month</h5>
                    <p>Create 10 product listings</p>
                    <p>Manage up to 20 salespersons at once</p>
                    <p>View customer sales</p>
                    <p>No priority email support</p>
                    <p>No available software training</p>
                    <button class="btn btn-outline-warning me-2">Sign up for free</button>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card p-4 shadow-sm pricing-card">
                    <h3>Plus Plan</h3>
                    <h5>$5.99/month</h5>
                    <p>Create 30+ product listings</p>
                    <p>Manage up to 40 salespersons at once</p>
                    <p>View customer sales</p>
                    <p>Priority email support</p>
                    <p>No available software training</p>
                    <button class="btn btn-warning me-2">Get Started</button>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card p-4 shadow-sm pricing-card">
                    <h3>Premium Plan</h3>
                    <h5>$12.99/month</h5>
                    <p>Unlimited product listings</p>
                    <p>Manage an unlimited amount salespersons at once</p>
                    <p>View customer sales</p>
                    <p>Priority email support</p>
                    <p>Personalized software training</p>
                    <button class="btn btn-warning me-2">Get Started</button>
                </div>
            </div>
        </div>
    </div>
</section>

