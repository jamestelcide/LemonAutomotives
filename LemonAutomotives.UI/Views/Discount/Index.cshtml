@model IEnumerable<DiscountResponseDto>

@{
    ViewBag.Title = "Discounts";
    ViewBag.CurrentUrl = "~/Discount/Index";
}
<div class="container">
    <div class="white-container">
        <h1>Discounts</h1><br /><br />
        <form asp-controller="Discount" asp-action="Index" method="get">
            <div>
                <label>Search by:</label>
                <select name="searchBy">
                    @foreach (var searchField in ViewBag.SearchFields)
                    {
                        if (searchField.Key == ViewBag.CurrentSearchBy)
                        {
                            <option value="@searchField.Key" selected="selected">@searchField.Value</option>
                        }
                        else
                        {
                            <option value="@searchField.Key">@searchField.Value</option>
                        }
                    }
                </select>
                <input type="search" id="Search" placeholder="Search" name="searchString" value="@ViewBag.CurrentSearchString" />
                <button>Search</button>
                <a asp-controller="Discount" asp-action="Index">Clear all</a>
            </div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Begin Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Discount Percentage</th>
                        <th scope="col">Product ID</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DiscountResponseDto discount in Model)
                    {
                        <tr scope="row">
                            <td>@discount.BeginDate.ToString("MM/dd/yyyy")</td>
                            <td>@discount.EndDate.ToString("MM/dd/yyyy")</td>
                            <td>@discount.DiscountPercentage</td>
                            <td>@discount.ProductID</td>
                            <td>
                                <a asp-controller="Discount" asp-action="Edit" asp-route-DiscountID="@discount.DiscountID">Edit</a>
                                <a asp-controller="Discount" asp-action="Delete" asp-route-DiscountID="@discount.DiscountID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
        <a asp-controller="Discount" asp-action="Create" class="btn btn-outline-warning">Create Discount</a>
    </div>
</div>
