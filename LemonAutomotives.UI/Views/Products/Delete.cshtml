@model ProductResponseDto

@{
    ViewBag.Title = "Delete Product";
    ViewBag.CurrentUrl = "~/Product/Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a asp-controller="Product" asp-action="Index" class="mb-2">Back to Product List</a>
            <h3 class="text-center mb-4">Are you sure you would like to delete this product?</h3>

            <form asp-controller="Products" asp-action="Delete" method="post">
                <div class="form-group mb-3">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" disabled/>
                    <span asp-validation-for="ProductName" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductManufacturer" class="form-label">Manufacturer</label>
                    <input asp-for="ProductManufacturer" class="form-control" disabled />
                    <span asp-validation-for="ProductManufacturer" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductModel" class="form-label">Model</label>
                    <input asp-for="ProductModel" class="form-control" disabled />
                    <span asp-validation-for="ProductModel" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductYear" class="form-label">Year</label>
                    <input asp-for="ProductYear" class="form-control" disabled />
                    <span asp-validation-for="ProductYear" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductPurchasePrice" class="form-label">Purchase Price</label>
                    <input asp-for="ProductPurchasePrice" type="tel" class="form-control" disabled />
                    <span asp-validation-for="ProductPurchasePrice" style="color: red;"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProductQty" class="form-label">Quantity</label>
                    <input asp-for="ProductQty" class="form-control" disabled />
                    <span asp-validation-for="ProductQty" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductCommission" class="form-label">Commission</label>
                    <input asp-for="ProductCommission" class="form-control" disabled />
                    <span asp-validation-for="ProductCommission" style="color: red;"></span>
                </div>
                <div class="d-grid">
                    <button class="btn btn-outline-warning">Delete</button>
                    <div asp-validation-summary="All" style="color: red;"></div>

                    @if (ViewBag.Errors != null)
                    {
                        <div>
                            <ul>
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
