@model SalespersonResponseDto

@{
    ViewBag.Title = "Delete Salesperson";
    ViewBag.CurrentUrl = "~/Salesperson/Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a asp-controller="Salesperson" asp-action="Index" class="mb-2">Back to Salespersons List</a>
            <h3 class="text-center mb-4">Are you sure you would like to delete this Salesperson?</h3>

            <form asp-controller="Salesperson" asp-action="Delete" method="post">
                <input type="hidden" asp-for="SalespersonID" />
                <div class="form-group mb-3">
                    <label asp-for="SalespersonFirstName" class="form-label">First Name</label>
                    <input asp-for="SalespersonFirstName" disabled="disabled" class="form-control" />
                    <span asp-validation-for="SalespersonFirstName" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalespersonLastName" class="form-label">Last Name</label>
                    <input asp-for="SalespersonLastName" disabled="disabled" class="form-control" />
                    <span asp-validation-for="SalespersonFirstName" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalespersonAddress" class="form-label">Address</label>
                    <input asp-for="SalespersonAddress" disabled="disabled" class="form-control" />
                    <span asp-validation-for="SalespersonAddress" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalespersonPhone" class="form-label">Phone</label>
                    <input asp-for="SalespersonPhone" disabled="disabled" class="form-control" />
                    <span asp-validation-for="SalespersonPhone" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalespersonStartDate" class="form-label">Start Date</label>
                    <input asp-for="SalespersonStartDate" disabled="disabled" class="form-control" />
                    <span asp-validation-for="SalespersonStartDate" style="color: red;"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalespersonTerminationDate" class="form-label">Termination Date</label>
                    <input asp-for="SalespersonTerminationDate" disabled="disabled" class="form-control" />
                    <span asp-validation-for="SalespersonTerminationDate" style="color: red;"></span>
                </div>
                <div class="d-grid">
                    <button class="btn btn-outline-warning">Delete</button>
                    <div asp-validation-summary="All" style="color: red;"></div>

                    @if (ViewBag.Errors != null)
                    {
                        <div>
                            <ul>
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
