@model List<QSCRDto>

<div class="container mt-5">
    <h3 class="text-center">Quarterly Salesperson Commission Report</h3>

    <form method="get" asp-controller="QSCR" asp-action="Index">
        <div class="form-group mb-3">
            <label for="startDate">Start Date</label>
            <input type="date" name="startDate" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="endDate">End Date</label>
            <input type="date" name="endDate" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label for="salespersonId">Salesperson ID (optional)</label>
            <input type="text" name="salespersonId" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Generate Report</button>
    </form>

    <table class="table mt-4">
        <thead>
            <tr>
                <th>Salesperson Name</th>
                <th>Total Commission</th>
                <th>Sales Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SalespersonName</td>
                    <td>@item.TotalCommission</td>
                    <td>@item.SalesCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
